    </div>

</div>

<script>

    $(document).ready(function () {
        generateDetails()
    })

    function generateDetails() {
        //loadergif(1);
        var  Result = @Html.Raw(Json.Encode(ViewBag.AddressData));

        //Result = jQuery.parseJSON(Results);
        $('#addressSearch').DataTable().clear().destroy();
