        <div class="col-md-6">
            <div class="col-md-12">
                <h2 style="margin-bottom:30px;">Address History</h2>
            </div>
        </div>
    </div>

    <div class="row">
@using (Html.BeginForm("SearchByAddress", "Home", FormMethod.Post, new { @class = "col-md-9", style = "display:contents;", name = "frm", id = "frm", onsubmit = "loadergif(1);" }))
